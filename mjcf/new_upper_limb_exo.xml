<mujoco model="upper_limb_exo">
    <option gravity="0 0 -9.81" />
    <compiler angle="degree" meshdir="meshes/" autolimits="true" />


    <option timestep="0.001"></option>     <!-- time step for simulations  -->

    <default>
        <geom type="mesh" />
    </default>

    <default>
        <default class="visual">
            <geom contype="0" conaffinity="0" group="0" density="0" rgba="0.5 0.5 0.5 1" />
        </default>
        <default class="transparent">
            <geom contype="0" conaffinity="0" group="0" density="0" rgba="0.5 0.5 0.5 0.3" />
        </default>
    </default>

    <default>
        <default class="AK7010_actuator">
            <joint damping="0.015" armature="0.00414" frictionloss="0.5" />
        </default>

        <default class="AK109_actuator">
            <joint damping="0.03" armature="0.00812" frictionloss="0.5" />
        </default>

        <default class="AK606_actuator">
            <joint damping="0.02" armature="0.00088" frictionloss="0.25" />
        </default>
    </default>

    <!--   Fusion outputs meshes with mm units by default, but must be converted to m in MuJoCo, hence
    the scaling   -->
    <asset>
        <mesh name="link0" file="new_design/link0.stl" scale="0.001 0.001 0.001" />
        <mesh name="link1" file="new_design/link1.stl" scale="0.001 0.001 0.001" />
        <mesh name="link2" file="new_design/link2.stl" scale="0.001 0.001 0.001" />
        <mesh name="link3" file="new_design/link3.stl" scale="0.001 0.001 0.001" />
        <mesh name="dummy_upper_arm" file="new_design/dummy_upper_arm.stl" scale="0.001 0.001 0.001" />
        <mesh name="dummy_lower_arm" file="new_design/dummy_lower_arm.stl" scale="0.001 0.001 0.001" />
    </asset>
    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="-130" elevation="-20" />
    </visual>

    <asset>
        <texture builtin="gradient" height="100" rgb1=".4 .5 .6" rgb2="0 0 0" type="skybox"
            width="100" />
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2"
            width="100" height="100" />
        <material name="MatPlane" reflectance="0.1" texture="texplane" texrepeat="1 1"
            texuniform="true" />
    </asset>


    <worldbody>
        <geom name="ground" pos="0 0 0" size="5 5 0.05" type="plane" material="MatPlane"
            friction="1 1 0.1" condim="3" conaffinity="1" contype="1" group="2" rgba="0.8 0.9 0.8 1" />

        <light cutoff="1000" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1"
            pos="0 0 1.3" specular=".1 .1 .1" castshadow="false" />



            
        <!-- Coordinate axes -->
        <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.005" rgba="1 0 0 1"/>
        <geom type="capsule" fromto="0 0 0 0 0.1 0" size="0.005" rgba="0 1 0 1"/>
        <geom type="capsule" fromto="0 0 0 0 0 0.1" size="0.005" rgba="0 0 1 1"/>




        <!--   link0 -->
        <body name="link0" pos="0 0 0.7" euler="-90 0 0">
            <geom type="mesh" class="visual" mesh="link0" rgba="0.8 0.8 0.8 1"/>
            <inertial pos="-0.013E-03 0.011E-03 -29.442E-03" 
                        mass="2797.101E-03"
                        fullinertia="2.158E-03 2.155E-03 3.143E-03 2134.574E-09 -791.755E-09 633.36E-09" />         
                    <!-- Coordinate axes -->
            <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.005" rgba="1 0 0 1"/>
            <geom type="capsule" fromto="0 0 0 0 0.1 0" size="0.005" rgba="0 1 0 1"/>
            <geom type="capsule" fromto="0 0 0 0 0 0.1" size="0.005" rgba="0 0 1 1"/>

            <!--   link1 -->
            <body name="link1" pos="0 0 0" euler="0 0 0">
                <geom type="mesh" class="visual" mesh="link1" rgba="0.8 0.8 0.8 1"/>
                <inertial pos="0.01E-03 90.609E-03 -1.503E-03" 
                            mass="1518.31E-03"
                            fullinertia="1.365E-03 8.234E-04 1.636E-03 -354.196E-09 681.552E-09 62766.752E-09" />         
                <joint type="hinge" name="shoulder_pitch" axis="0 0 1" pos="0 0 0" range="-180 0"
                    class="AK109_actuator" />
                        <!-- Coordinate axes -->
                <!-- <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.005" rgba="1 0 0 1"/>
                <geom type="capsule" fromto="0 0 0 0 0.1 0" size="0.005" rgba="0 1 0 1"/>
                <geom type="capsule" fromto="0 0 0 0 0 0.1" size="0.005" rgba="0 0 1 1"/> -->
          

                            <!--   link2 -->
                <body name="link2" pos="0 72.73E-03 100E-03" euler="90 0 0">
                    <geom type="mesh" class="visual" mesh="link2" rgba="0.8 0.8 0.8 1"/>
                    <inertial pos="25.278E-3 -72.158E-3 -155.796E-3"
                                mass="2718.741E-3"
                                fullinertia="1.702E-02 1.838E-02 3.978E-03 2.885E-04 2.401E-03 -2.923E-03" />   
                    <joint type="hinge" name="shoulder_yaw" axis="0 0 1" pos="0 0 0" range="-90 90"
                        class="AK606_actuator" />
                            <!-- Coordinate axes -->
                    <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.005" rgba="1 0 0 1"/>
                    <geom type="capsule" fromto="0 0 0 0 0.1 0" size="0.005" rgba="0 1 0 1"/>
                    <geom type="capsule" fromto="0 0 0 0 0 0.1" size="0.005" rgba="0 0 1 1"/>
                

                            <!--   link3 -->
                    <body name="link3" pos="24.328E-03 -60.215E-03 -196.15E-03" euler="-90 -22 0">
                        <geom type="mesh" class="visual" mesh="link3" rgba="0.8 0.8 0.8 1"/>
                        <inertial pos="-5.289E-08 121.422E-03 -1.713E-03"
                                    mass="235.178E-03"
                                    fullinertia="7.489E-04 61324.892E-09 7.968E-04 0.518E-09 -0.094E-09 3826.504E-09" />   

                    <joint type="hinge" name="elbow" axis="0 0 1" pos="0 0 0" range="-120 90"
                            class="AK7010_actuator" />
                            <!-- Coordinate axes -->
                        <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.005" rgba="1 0 0 1"/>
                        <geom type="capsule" fromto="0 0 0 0 0.1 0" size="0.005" rgba="0 1 0 1"/>
                        <geom type="capsule" fromto="0 0 0 0 0 0.1" size="0.005" rgba="0 0 1 1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

</mujoco>